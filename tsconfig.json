{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 12",

  "compilerOptions": {
    "lib": [
      "es2019",
      "es2020",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext"
    ],
    "module": "commonjs",
    "target": "ESNEXT",
    "esModuleInterop": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictPropertyInitialization": false
  }
}